<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <meta name="author" content="Bdtask">
    <title>About</title>
    <!-- App favicon -->
    <link rel="shortcut icon" href="/admin/dist/img/favicon.png">
    <!--Global Styles(used by all pages)-->
    <link href="/admin/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/admin/plugins/metisMenu/metisMenu.min.css" rel="stylesheet">
    <link href="/admin/plugins/fontawesome/css/all.min.css" rel="stylesheet">
    <link href="/admin/plugins/typicons/src/typicons.min.css" rel="stylesheet">
    <link href="/admin/plugins/themify-icons/themify-icons.min.css" rel="stylesheet">
    <link href="/admin/plugins/summernote/summernote.css" rel="stylesheet">
    <link href="/admin/plugins/summernote/summernote-bs4.css" rel="stylesheet">
    <link href="/admin/plugins/jquery.sumoselect/sumoselect.min.css" rel="stylesheet">
    <!--Start Your Custom Style Now-->
    <link href="/admin/dist/css/style.css" rel="stylesheet">
</head>

<body>
     <%- include("includes/loader.ejs")%>
    <div class="wrapper">
        <%- include("includes/sidebar.ejs", {page: "about"}) %>
    <div class="content-wrapper">
        <div class="main-content">
            <%- include("includes/header.ejs")%>
            <div class="content-header row align-items-center m-0">
                <nav
                aria-label="breadcrumb"
                class="col-sm-4 order-sm-last mb-3 mb-sm-0 p-0"
              >
                <ol
                  class="
                    breadcrumb
                    d-inline-flex
                    font-weight-600
                    fs-13
                    bg-white
                    mb-0
                    float-sm-right
                  "
                >
                  <li class="breadcrumb-item"><a href="/admin">Admin</a></li>
                  <li class="breadcrumb-item active">About</li>
                </ol>
              </nav>
                <div class="col-sm-8 header-title p-0">
                    <div class="media">
                        <div class="header-icon text-success mr-3"><i class="typcn typcn-puzzle-outline"></i></div>
                        <div class="media-body">
                            <h1 class="font-weight-bold">About section</h1>
                            <small>Update about section</small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="body-content">
                <div class="row">
                    <div class="col-md-12 col-lg-10 mx-auto">
                        <% if(successMessage != "") { %>
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <%= successMessage %>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                              </button>
                          </div>
                        <% } %>
                        <div class="card mb-4">
                            <div class="card-header">
                                <div>
                                    <h6 class="fs-17 font-weight-600 mb-0">Editting About</h6>
                                </div>
                            </div>
                            <div class="card-body">
                                <form action="/admin/about" method="POST" enctype ="multipart/form-data">
                                    <div class="form-group">
                                        <label for="exampleFormControlSelect1" class="font-weight-600">About body</label>
                                        <textarea id="summernote" name="body" required>
                                            <%= body%>
                                        </textarea>
                                    </div> 
                                    <div class="form-group">
                                        <label for="exampleInputEmail1" class="font-weight-600">Student number:</label>
                                        <input name="student" type="number" class="form-control mt-2"
                                        value=<%= students%>>
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1" class="font-weight-600">Teacher number:</label>
                                        <input name="teacher" type="number" class="form-control mt-2"
                                            value=<%= teachers%>>
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1" class="font-weight-600">Teachers' experience :</label>
                                        <input name="experience" type="number" class="form-control mt-2" value=<%= exprience %>>
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1" class="font-weight-600"> <p>Video:</p> 
                                            <video controls="" loop="" width="300">
                                                <source src="/video/<%= vidoe%>"  type="video/mp4">
                                            </video>   
                                        </label>
                                        <input type="file" name="video" id="file-2" class="custom-input-file custom-input-file--2" data-multiple-caption="{count} files selected">
                                        <label for="file-2">
                                            <i class="fa fa-upload"></i>
                                            <span>Choose a fileâ€¦</span>
                                        </label>
                                    </div>
                                    <button type="submit" 
                                        class="btn btn-primary mt-5">O'zgartirish</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="overlay"></div>
        </div>
    </div>

    <!--Global script(used by all pages)-->
    <script src="/admin/plugins/jQuery/jquery-3.4.1.min.js"></script>
    <script src="/admin/dist/js/popper.min.js"></script>
    <script src="/admin/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="/admin/plugins/metisMenu/metisMenu.min.js"></script>
    <script src="/admin/plugins/perfect-scrollbar/dist/perfect-scrollbar.min.js"></script>
    <script src="/admin/dist/js/sidebar.js"></script>
    <script src="/admin/plugins/summernote/summernote.min.js"></script>
        <script src="/admin/plugins/summernote/summernote-bs4.min.js"></script>

    <!--Page Active Scripts(used by this page)-->
    <script src="/admin/plugins/summernote/summernote.active.js"></script>
    <script src="/admin/dist/js/pages/forms-basic.active.js"></script>
    <script>
        $('#summernote').find('.note-editable').focus();
    </script>

</body>

</html>