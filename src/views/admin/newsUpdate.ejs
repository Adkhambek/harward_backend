<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <meta name="author" content="Bdtask">
    <title>About</title>
    <!-- App favicon -->
    <link rel="shortcut icon" href="/admin/dist/img/favicon.png">
    <!--Global Styles(used by all pages)-->
    <link href="/admin/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/admin/plugins/metisMenu/metisMenu.min.css" rel="stylesheet">
    <link href="/admin/plugins/fontawesome/css/all.min.css" rel="stylesheet">
    <link href="/admin/plugins/typicons/src/typicons.min.css" rel="stylesheet">
    <link href="/admin/plugins/themify-icons/themify-icons.min.css" rel="stylesheet">
    <link href="/admin/plugins/summernote/summernote.css" rel="stylesheet">
    <link href="/admin/plugins/summernote/summernote-bs4.css" rel="stylesheet">
    <link href="/admin/plugins/jquery.sumoselect/sumoselect.min.css" rel="stylesheet">
    <!--Start Your Custom Style Now-->
    <link href="/admin/dist/css/style.css" rel="stylesheet">
</head>

<body>
     <%- include("includes/loader.ejs")%>
    <div class="wrapper">
        <%- include("includes/sidebar.ejs", {page: "UpdateNews"} ) %>
    <div class="content-wrapper">
        <div class="main-content">
            <%- include("includes/header.ejs")%>
            <div class="content-header row align-items-center m-0">
                <div class="col-sm-8 header-title p-0">
                    <div class="media">
                        <div class="header-icon text-success mr-3"><i class="typcn typcn-puzzle-outline"></i></div>
                        <div class="media-body">
                            <h1 class="font-weight-bold">Update News</h1>
                            <small>Update old news</small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="body-content">
                <div class="row">
                    <div class="col-md-12 col-lg-10 mx-auto">
                        <% if(successMessage != "") { %>
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <%= successMessage %>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                              </button>
                          </div>
                        <% } %>
                        <div class="card mb-4">
                            <div class="card-header">
                                <div>
                                    <h6 class="fs-17 font-weight-600 mb-0">Editting News</h6>
                                </div>
                            </div>
                            <div class="card-body">
                                <form action="/admin/news/update/<%= news_id%>" method="POST" enctype ="multipart/form-data">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1" class="font-weight-600">Title:</label>
                                        <input name="title" type="text" class="form-control mt-2"
                                        value=<%=title %>>
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1" class="font-weight-600">Author:</label>
                                        <input name="author" type="text" class="form-control mt-2"
                                        value=<%=author%>>
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleFormControlSelect1" class="font-weight-600">News body</label>
                                        <textarea id="summernote" name="body" required>
                                            <%= body%>
                                        </textarea>
                                    </div> 
                                    <div class="form-group">
                                        <label for="exampleInputEmail1" class="font-weight-600"> <p>Image:</p> 
                                            <img src="/images/yangiliklar/<%= image%>" class="mb-2" width="150" alt="image">
                                        </label>
                                        <input type="file" name="image" id="file-2" class="custom-input-file custom-input-file--2" data-multiple-caption="{count} files selected">
                                        <label for="file-2">
                                            <i class="fa fa-upload"></i>
                                            <span>Choose a imageâ€¦</span>
                                        </label>
                                    </div>
                                    <button type="submit" 
                                        class="btn btn-primary mt-5">Update</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="overlay"></div>
        </div>
    </div>

    <!--Global script(used by all pages)-->
    <script src="/admin/plugins/jQuery/jquery-3.4.1.min.js"></script>
    <script src="/admin/dist/js/popper.min.js"></script>
    <script src="/admin/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="/admin/plugins/metisMenu/metisMenu.min.js"></script>
    <script src="/admin/plugins/perfect-scrollbar/dist/perfect-scrollbar.min.js"></script>
    <script src="/admin/dist/js/sidebar.js"></script>
    <script src="/admin/plugins/summernote/summernote.min.js"></script>
        <script src="/admin/plugins/summernote/summernote-bs4.min.js"></script>

    <!--Page Active Scripts(used by this page)-->
    <script src="/admin/plugins/summernote/summernote.active.js"></script>
    <script src="/admin/dist/js/pages/forms-basic.active.js"></script>
    <script>
        $('#summernote').find('.note-editable').focus();
    </script>

</body>

</html>